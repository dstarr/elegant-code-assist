{
  "name": "ec-code-assist",
  "displayName": "Elegant Code Assist",
  "description": "A coding assistant that works with Ollama to provide code suggestions and completions.",
  "publisher": "Elegant Code",
  "repository": {
    "type": "git",
    "url": "https://github.com/dstarr/elegant-code-assist.git"
  },
  "license": "MIT",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ec_assist_ollamaChat",
        "title": "Hello World",
        "category": "EC"
      },
      {
        "command": "ec_assist_sendCode",
        "title": "Send to Ollama",
        "category": "EC"
      },
      {
        "command": "ec_assist_showModels",
        "title": "Show Available Models",
        "category": "EC"
      },
      {
        "command": "ec_assist_showWorkspaceState",
        "title": "Show Workspace State",
        "category": "EC"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "ec_assist_modelsView",
          "name": "Ollama Models"
        }
      ]
    },
    "menus": {
      "view/item/context": [],
      "editor/context": [
        {
          "command": "ec_assist_sendCode",
          "when": "editorTextFocus"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "ollama": "^0.5.11",
    "zod": "^3.24.1",
    "zod-to-json-schema": "^3.24.1"
  }
}
